{% extends 'base.html.twig' %}

{% block title %}Valider ma commande{% endblock %}

{% block content %}
    <h2>Je passe ma commande</h2>

    <hr>
    <div class="row">
        <div class="col-md-6">
                {% set formHtml %}
                    {{ form_start(form,{action:path('order_recap')}) }}
                        {{ form_label(form.address,'Choisissez votre adrese de livraison') }}
                    <a href="{{ path('account_add_address') }}">Ajouter une adresse</a>
                    {{ form_end(form) }}
                {% endset %}
                {{ formHtml | replace({'[br]':'<br>'})|raw }}
        </div>
        <div class="col-md-6">
                <div class="text-center">
                    <b>RÃ©cap de ma commande</b>
                </div>
            <div class="row">
                {% for prod in cart %}<br>
                    <div class="col-2">
                        <img src="/uploads/{{ prod.product.illustration }}" alt="{{ prod.product.name }}"
                             height="70px">
                    </div>
                    <div class="col-1"></div>
                    <div class="col-7 my-auto">
                        {{ prod.product.name }}<br>
                        <small>{{ prod.product.subtitle }}</small>
                    </div>
                    <div class="col-2 my-auto">
                        x <b>{{ prod.quantity }}</b>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
